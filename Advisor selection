<script>
    const ajarnList = [
        "‡∏≠‡∏à.‡∏£‡∏±‡∏ê‡∏û‡∏•", "‡∏≠‡∏à.‡∏õ‡∏Å‡∏£‡∏ì‡πå", "‡∏≠‡∏à.‡∏ô‡∏°‡∏ô‡∏ï‡πå", "‡∏≠‡∏à.‡∏®‡∏£‡∏µ‡∏ß‡∏£‡∏£‡∏ì", "‡∏≠‡∏à.‡πÄ‡∏Å‡∏®‡∏¥‡∏ì‡∏µ", 
        "‡∏≠‡∏à.‡∏≠‡∏£‡∏†‡∏≤", "‡∏≠‡∏à.‡∏•‡∏•‡∏ô‡∏≤", "‡∏≠‡∏à.‡∏™‡∏∏‡∏†‡∏≤‡∏ß‡∏î‡∏µ", "‡∏≠‡∏à.‡∏û‡∏±‡∏ó‡∏ò‡πå‡∏ò‡∏µ‡∏£‡∏≤", "‡∏≠‡∏à.‡∏û‡∏ô‡∏¥‡∏ï‡∏≤", 
        "‡∏≠‡∏à.‡∏≠‡∏±‡∏á‡∏®‡∏∏‡∏°‡∏≤", "‡∏≠‡∏à.‡∏ß‡∏á‡∏®‡∏Å‡∏£", "‡∏≠‡∏à.‡∏™‡∏∏‡∏†‡∏±‡∏ó‡∏£‡∏≤"
    ];

    let allSelections = []; 
    let currentGroupId = "";
    let temp1 = "";
    let temp2 = "";

    function init() {
        renderDashboard();
        renderButtons();
    }

    function renderDashboard() {
        const container = document.getElementById('dashboard');
        container.innerHTML = "";
        
        ajarnList.forEach(name => {
            const choices1 = allSelections.filter(s => s.choice1 === name);
            const choices2 = allSelections.filter(s => s.choice2 === name);
            const totalCount = choices1.length + choices2.length;
            
            const box = document.createElement('div');
            // ‡∏ñ‡πâ‡∏≤‡∏°‡∏µ‡∏Ñ‡∏ô‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏°‡∏≤‡∏Å‡∏Å‡∏ß‡πà‡∏≤ 1 ‡πÉ‡∏´‡πâ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏™‡∏µ‡∏Å‡∏•‡πà‡∏≠‡∏á (Alert Multiple)
            box.className = `stat-box ${totalCount > 1 ? 'alert-multiple' : ''}`;
            
            let html = `<div class="stat-name">${name} ${totalCount > 1 ? '<span class="warning-badge">‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÅ‡∏•‡πâ‡∏ß '+totalCount+' ‡∏Å‡∏•‡∏∏‡πà‡∏°</span>' : ''}</div>`;
            
            // ‡πÅ‡∏™‡∏î‡∏á‡∏≠‡∏±‡∏ô‡∏î‡∏±‡∏ö 1
            if (choices1.length > 0) {
                html += `<div class="list-section section-1">
                            <span class="rank-label label-1">ü•á ‡∏≠‡∏±‡∏ô‡∏î‡∏±‡∏ö 1</span>
                            ${choices1.map(s => `<span class="group-tag">‡∏Å‡∏•‡∏∏‡πà‡∏° ${s.group}</span>`).join('')}
                         </div>`;
            }
            
            // ‡πÅ‡∏™‡∏î‡∏á‡∏≠‡∏±‡∏ô‡∏î‡∏±‡∏ö 2
            if (choices2.length > 0) {
                html += `<div class="list-section section-2">
                            <span class="rank-label label-2">ü•à ‡∏≠‡∏±‡∏ô‡∏î‡∏±‡∏ö 2</span>
                            ${choices2.map(s => `<span class="group-tag">‡∏Å‡∏•‡∏∏‡πà‡∏° ${s.group}</span>`).join('')}
                         </div>`;
            }

            if (totalCount === 0) {
                html += `<div style="text-align:center; padding:10px; color:#ccc; font-style:italic; font-size:13px;">‡∏ß‡πà‡∏≤‡∏á</div>`;
            }

            box.innerHTML = html;
            container.appendChild(box);
        });
    }

    function renderButtons() {
        const container = document.getElementById('ajarn-buttons');
        container.innerHTML = "";
        ajarnList.forEach(name => {
            const btn = document.createElement('button');
            btn.className = `btn-ajarn ${name === temp1 ? 'btn-selected-1' : ''}`;
            if (name === temp2) btn.style.borderColor = "#3498db";
            btn.innerText = name;
            btn.onclick = () => {
                if (!temp1) {
                    temp1 = name;
                } else if (!temp2 && name !== temp1) {
                    temp2 = name;
                    document.getElementById('confirm-btn').style.display = 'inline-block';
                } else {
                    temp1 = name; temp2 = "";
                    document.getElementById('confirm-btn').style.display = 'none';
                }
                updateInstruction();
                renderButtons();
            };
            container.appendChild(btn);
        });
    }

    function startSelection() {
        const num = document.getElementById('groupNumber').value;
        if (num > 0) {
            currentGroupId = num;
            temp1 = ""; temp2 = "";
            document.getElementById('current-group-display').innerText = num;
            document.getElementById('auth-area').style.display = 'none';
            document.getElementById('selection-area').style.display = 'block';
            updateInstruction();
            renderButtons();
        } else { alert("‡∏£‡∏∞‡∏ö‡∏∏‡πÄ‡∏•‡∏Ç‡∏Å‡∏•‡∏∏‡πà‡∏°"); }
    }

    function updateInstruction() {
        const ins = document.getElementById('step-instruction');
        if (!temp1) {
            ins.innerHTML = "üéØ ‡∏Ç‡∏±‡πâ‡∏ô‡∏ó‡∏µ‡πà 1: ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏≠‡∏≤‡∏à‡∏≤‡∏£‡∏¢‡πå‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡πÄ‡∏õ‡πá‡∏ô‡∏≠‡∏±‡∏ô‡∏î‡∏±‡∏ö 1";
            ins.style.backgroundColor = "#fff5f5"; ins.style.color = "#e74c3c";
        } else if (!temp2) {
            ins.innerHTML = `üéØ ‡∏Ç‡∏±‡πâ‡∏ô‡∏ó‡∏µ‡πà 2: ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏≠‡∏±‡∏ô‡∏î‡∏±‡∏ö 2 (‡∏ï‡πà‡∏≠‡∏à‡∏≤‡∏Å ${temp1})`;
            ins.style.backgroundColor = "#f0f7ff"; ins.style.color = "#3498db";
        } else {
            ins.innerHTML = `‚úÖ ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏Ñ‡∏£‡∏ö‡πÅ‡∏•‡πâ‡∏ß: (1) ${temp1} ‡πÅ‡∏•‡∏∞ (2) ${temp2}`;
            ins.style.backgroundColor = "#e8f5e9"; ins.style.color = "#27ae60";
        }
    }

    function finalSubmit() {
        if (confirm(`‡∏¢‡∏∑‡∏ô‡∏¢‡∏±‡∏ô‡∏Å‡∏≤‡∏£‡πÄ‡∏•‡∏∑‡∏≠‡∏Å\n1. ${temp1}\n2. ${temp2}`)) {
            allSelections.push({ group: currentGroupId, choice1: temp1, choice2: temp2 });
            renderDashboard();
            document.getElementById('selection-area').style.display = 'none';
            document.getElementById('result-msg').style.display = 'block';
        }
    }

    function resetForm() {
        document.getElementById('auth-area').style.display = 'block';
        document.getElementById('result-msg').style.display = 'none';
        document.getElementById('groupNumber').value = "";
    }

    init();
</script>

</body>
